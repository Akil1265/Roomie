{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "chats": {
      "$chatId": {
        ".read": "auth != null && root.child('chats').child($chatId).child('participants').child(auth.uid).exists()",
        ".write": "auth != null && root.child('chats').child($chatId).child('participants').child(auth.uid).exists()",
        "messages": {
          ".indexOn": ["timestamp"],
          "$messageId": {
            ".write": "auth != null"
          }
        }
      }
    },
    "groupChats": {
      "$groupId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "messages": {
          ".indexOn": ["timestamp"],
          "$messageId": {
            ".write": "auth != null"
          }
        }
      }
    },
    "userConversations": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        ".indexOn": ["lastMessageTime"]
      }
    }
  }
}